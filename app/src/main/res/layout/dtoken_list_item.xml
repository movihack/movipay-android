<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="10dp"
                                                   xmlns:tools="http://schemas.android.com/tools">

    <TextView android:id="@+id/dtoken_id"
              tools:text="AN7639"
              android:layout_width="wrap_content"
              android:textSize="25sp"
              android:layout_height="wrap_content" android:layout_marginTop="24dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginStart="24dp" android:layout_marginBottom="24dp"/>
    <TextView
            tools:text="$58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dtoken_value" app:layout_constraintStart_toEndOf="@+id/dtoken_id"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/dtoken_id"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            tools:text="4 hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dtoken_time" app:layout_constraintStart_toStartOf="@+id/dtoken_value"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dtoken_value" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>